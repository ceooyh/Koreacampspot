<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	
	<select id="selectBoardList" parameterType="int" resultType="board">
		select bno,writer,title,content,bdate,blike,bhate,views from 
		(select ceil(rownum / 7) as pagenum,bno,title,writer,content,bdate,blike,bhate,views from
 	 		 (select b.*, nvl(views,0) as views from 
 	 		 board b, (select bno, count(*) as views from 
 	 		 board_comment group by bno) c 
 	 		 where b.bno = c.bno(+) 
 	 		 <choose>
 	 		 	<when test="mode.equals('blike')">
	 	 		 	order by b.blike desc)) 
 	 		 	</when>
 	 		 	<when test="mode.equals('bhate')">
	 	 			 order by b.bhate desc))
 	 		 	</when>
				<otherwise>
	 	 			 order by b.bno desc))
				</otherwise>
 	 		 </choose>
 	 		  where pagenum = #{pageNo} 	 	
	</select>
	
	<update id="addCount" parameterType="int">
		update board set views = views+1 where bno = #{bno}
	</update>
	
	<select id="selectBoard" parameterType="int" resultType="board">
		select * from board where bno = #{bno}
	</select>
	
	<select id="selectBoardComment" parameterType="int" resultType="boardComment">
		select * from board_comment where bno = #{bno}
	</select>
	
	<select id="selectFileList" parameterType="int" resultType="boardFile">
 		select * from board_file where bno = #{bno}
 	</select>
	
	<select id="selectCount" resultType="int">
		select count(*) from board
	</select>
	
	<insert id="insertBoardComment" parameterType="boardComment">
		insert into board_comment(cno,bno,writer,content) values(seq_board_sno.nextval,#{bno},#{writer},#{content})
	</insert>
	
</mapper>